}
<html>
<body>
    <h2 style="text-align:right;margin-right: 250px;">زیروظایف</h2>

    @*<link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme-rtl.min.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap-4.4.1.css" rel="stylesheet" />
    <p>
        @*@Html.ActionLink("ایجاد وظیفه", "Create")*@
        <a href="@Url.Action("Create") " class="btn btn-success"> ایجاد زیروظیفه</a>
