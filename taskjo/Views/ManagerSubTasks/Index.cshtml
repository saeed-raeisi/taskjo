    @foreach (var item in Model)
    {

        <div class="col-md-4 pb-1 pb-md-0">
            <div class="card">
                <img class="card-img-top" src="~/ImgLogo/subtask.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.subTaskName</h5>
                    <p class="card-text">@item.subTascDesc</p>
                    <a href="@Url.Action("Details", new { id = item.subtaskId }) " class="btn btn-primary">جزئیات</a>
                    <a href="@Url.Action("Delete", new { id = item.subtaskId })" class="btn btn-danger">حذف</a>
                    <a href="@Url.Action("Edit", new { id = item.subtaskId
                    })" class="btn btn-warning">ویرایش</a>

                </div>
            </div>
        </div>
    }
