@model taskjo.Models.Phase

@{
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">ایجاد فاز</h3>
            </div>

            @using (Html.BeginForm(new { projectId = ViewBag.projectId }))
            {
                @Html.AntiForgeryToken()
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.phaseTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.phaseTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phaseTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.phaseState, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.phaseState, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phaseState, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="form-group">
                <label>وضعیت</label>
                <select class="form-control select2" id="phaseState" name="phaseState" style="width: 100%;">
                    <option value="2" selected="selected">در حال انجام</option>
                    <option value="1">انجام شده</option>
                    <option value="0">لغو شده</option>
                </select>
            </div>

            <div class="form-group">
                <label>پروژه </label>
                <input type="text" class="form-control" value="@ViewBag.projectId" name="projectId" id="projectId" disabled>
            </div>

        </div>
        <div class="card-footer">
            <input type="submit" value="ایجاد" class="btn btn-primary float-left" />
            <a href="/UserDashboard/ShowPhase/@ViewBag.projectId" class="product-title">بازگشت</a>
        </div>
            }

        </div>
    </div>
</div>